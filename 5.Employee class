class Employee:
    def __init__(self, name, salary):
        self.name = name
        self.__salary = salary 

    def work(self):
        print(f"{self.name} is working.")

    def show(self):
        print(f"Employee: {self.name}, Salary: ${self.__salary}")

# Example usage:
employee1 = Employee("John Doe", 50000)

employee1.work()  # Call the work method
employee1.show()  # Call the show method

# print(employee1.__salary)
